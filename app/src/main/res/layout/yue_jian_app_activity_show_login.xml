<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/yue_jian_app_splash" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_30"
            android:drawablePadding="@dimen/space_5"
            android:drawableTop="@drawable/yue_jian_app_ico_phone"
            android:gravity="center"
            android:padding="@dimen/space_10"
            android:text="手机"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_wchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space_5"
            android:drawableTop="@drawable/yue_jian_app_ico_weixin"
            android:gravity="center"
            android:padding="@dimen/space_10"
            android:text="微信"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/loading_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/yue_jian_app_loading"
        android:visibility="gone" />

</RelativeLayout>