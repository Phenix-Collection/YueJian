<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mingquan.yuejian.ui.EditUserNameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_input"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:layout_marginTop="@dimen/space_30"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/space_335"
            android:layout_height="@dimen/space_45"
            android:background="@drawable/yue_jian_app_edit_info_background"
            android:lines="1"
            />

        <TextView
            android:layout_marginTop="@dimen/space_30"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/space_335"
            android:layout_height="@dimen/space_45"
            android:gravity="center"
            android:background="@drawable/yue_jian_app_edit_save_background"
            android:text="保存"
            android:textColor="@color/white"/>

        <TextView
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginTop="@dimen/space_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editnickpromp"/>

    </LinearLayout>
</RelativeLayout>
